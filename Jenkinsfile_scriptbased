node {

    // Use Jenkins configured tools
    def jdkHome = tool name: 'jdk8', type: 'hudson.model.JDK'
    def mvnHome = tool name: 'maven3', type: 'hudson.tasks.Maven$MavenInstallation'

    withEnv([
        "JAVA_HOME=${jdkHome}",
        "PATH+JDK=${jdkHome}/bin",
        "PATH+MAVEN=${mvnHome}/bin"
    ]) {

        stage('Checkout') {
            git branch: 'master',
                url: 'https://github.com/lerockwins/spring3-mvc-maven-xml-hello-world-1.git'
        }

        stage('Build') {
            sh 'java -version'
            sh 'mvn -version'
            sh 'mvn clean package'
        }

        stage('Test') {
            sh 'mvn test || true'
        }

        stage('Archive') {
            archiveArtifacts artifacts: 'target/*.war', fingerprint: true
        }

        echo "Scripted Pipeline Completed Successfully"
    }
}
