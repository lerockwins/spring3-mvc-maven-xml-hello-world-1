pipeline {
    agent any

    tools {
        jdk 'jdk8'
        maven 'maven3'
    }

    parameters {
        string(name: 'GIT_BRANCH', defaultValue: 'master', description: 'Git branch to build')
        choice(name: 'BUILD_ACTION', choices: ['build', 'test', 'package'], description: 'Select action')
        booleanParam(name: 'SKIP_TESTS', defaultValue: false, description: 'Skip unit tests?')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "${params.GIT_BRANCH}",
                    url: 'https://github.com/lerockwins/spring3-mvc-maven-xml-hello-world-1.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    if (params.BUILD_ACTION == 'build') {
                        sh 'mvn clean compile'
                    } else if (params.BUILD_ACTION == 'test') {
                        sh 'mvn test'
                    } else if (params.BUILD_ACTION == 'package') {
                        if (params.SKIP_TESTS) {
                            sh 'mvn clean package -DskipTests'
                        } else {
                            sh 'mvn clean package'
                        }
                    }
                }
            }
        }

        stage('Archive') {
            when {
                expression { params.BUILD_ACTION == 'package' }
            }
            steps {
                archiveArtifacts artifacts: 'target/*.war', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "Parameterized job completed successfully"
        }
        failure {
            echo "Parameterized job failed"
        }
    }
}
